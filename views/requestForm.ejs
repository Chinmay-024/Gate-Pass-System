<%- include('./include/head.ejs')%>
  <title>Gate Pass | Request</title>
  </head>

  <body>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" />
    <div class="container bootstrap snippets bootdey">
      <%- include('./include/appBar.ejs')%>
    </div>
    <div>
      <% if(!requestsPerMonth){ %>
        <div class="alert alert-info d-flex align-items-center" role="alert">
          <span>
            You can make only 2 confirmed requests in one month
          </span>
        </div>
        <div class="container container-table">
          <form action="/request/new-request" class="row vertical-center-row" method="POST">
            <label for="Date">Date of Leaving: </label><br />
            <input type="datetime-local" id="Date" name="Date" /><br />
            <label for="modeOfTravel">Mode Of Travel: </label><br />
            <input type="text" id="modeOfTravel" name="modeOfTravel" /><br />
            <label for=" reason">Reason:</label><br />
            <input type="text" id="reason" name="reason" /><br />
            <br /><br />
            <!-- <input type="submit" /> -->
            <button type="submit" class="btn btn-outline-primary">Submit</button>
          </form>
        
        </div>
        <% if(error){ %>
          <div class="alert alert-danger d-flex align-items-center" style="margin-top: 25rem;"
                 role="alert">
            <!-- <span> -->
              <ul>
                <% for (var i=error.length-1; i>=0; i--) { %>
                  <li>
                   <strong> <%= error[i]%></strong>
                  </li>
                  <% } %>
              </ul>
            <!-- </span> -->
          </div>
          <%}%>

        <% } else {%>
          <div class="alert alert-danger d-flex align-items-center" role="alert">
            <span>
              You have already made 2 confirmed requests in this month. So you are
              not allowed to make another
            </span>
          </div>
          <%}%>
    </div>
    </div>
    </div>
    </div>
    <%- include('./include/end.ejs')%>
      <script type="text/javascript"></script>
  </body>

  </html>